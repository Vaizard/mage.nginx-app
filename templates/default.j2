# Default http server (unencrypted)
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.php index.html index.htm index.nginx-debian.html;
    server_name _;
    include snippets/mage_responses.conf;
    include snippets/mage_php.conf
}



